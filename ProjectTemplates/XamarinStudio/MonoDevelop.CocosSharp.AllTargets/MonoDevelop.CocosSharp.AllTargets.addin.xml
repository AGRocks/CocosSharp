<Addin 
        id              ="CocosSharp.AllTargets"
        namespace       ="MonoDevelop"
        name            ="CocosSharp project templates for all targets" 
        author          ="Rami Tabbara" 
        copyright       ="MIT X11" 
        url             ="https://github.com/mono/CocosSharp" 
        description     ="Setup CocosSharp projects for either mobile (iOS/Android) or Mac targets"
        category        ="CocosSharp"
        version         ="1.1.0.0">

    <Runtime>
        <!---iOS files -->
        <Import file    ="SingleWindowed.iOS/MonoDevelop.CocosSharp.iOS.iPhoneProject.xpt.xml" />
        <Import file    ="SingleWindowed.iOS/MonoDevelop.CocosSharp.iOS.iPadProject.xpt.xml" />
        <Import file    ="SingleWindowed.iOS/MonoDevelop.CocosSharp.iOS.UniversalProject.xpt.xml" />
        <Import file    ="Empty.iOS/MonoDevelop.CocosSharp.iOS.EmptyiPhoneProject.xpt.xml" />
        <Import file    ="Empty.iOS/MonoDevelop.CocosSharp.iOS.EmptyiPadProject.xpt.xml" />
        <Import file    ="Empty.iOS/MonoDevelop.CocosSharp.iOS.EmptyUniversalProject.xpt.xml" />
        <Import file    ="Common.iOS/Entitlements.plist.xml" />
        <Import file    ="Common.iOS/Info_iPhone.plist.xml" />
        <Import file    ="Common.iOS/Info_iPad.plist.xml" />
        <Import file    ="Common.iOS/Info_Universal.plist.xml" />
        <Import file    ="Common.iOS/Default-568h.png" />
        <Import file    ="Common.iOS/AppDelegate.cs" />

        <!---Android files -->
        <Import file    ="SingleWindowed.Android/MonoDevelop.CocosSharp.Android.AndroidProject.xpt.xml" />
        <Import file    ="Empty.Android/MonoDevelop.CocosSharp.Android.EmptyProject.xpt.xml" />
        <Import file    ="Common.Android/Icon-md.png" />
        <Import file    ="Common.Android/AboutAssets.txt" />
        <Import file    ="Common.Android/AboutResources.txt" />
        <Import file    ="Common.Android/Main.axml" />
        <Import file    ="Common.Android/AssemblyInfo.Android.cs" />
        <Import file    ="Common.Android/MainActivity.cs" />
        <Import file    ="Common.Android/Resource.cs" />

        <!---Mac files -->
        <Import file    ="SingleWindowed.Mac/MonoDevelop.CocosSharp.Mac.MacProject.xpt.xml" />
        <Import file    ="Empty.Mac/MonoDevelop.CocosSharp.Mac.EmptyProject.xpt.xml" />
        <Import file    ="Common.Mac/Info_Mac.plist.xml" />
        <Import file    ="Common.Mac/AppDelegate.cs" />

        <!---PCL Mobile files -->
        <Import file    ="SingleWindowed.Mobile/MonoDevelop.CocosSharp.Mobile.MobileProject.xpt.xml" />
        <Import file    ="Empty.Mobile/MonoDevelop.CocosSharp.Mobile.EmptyProject.xpt.xml" />

        <!---Common files -->
        <Import file    ="Common/MonoDevelop.CocosSharp.NewLayer.xft.xml" />
        <Import file    ="Common/EmptyLayer.cs" />
        <Import file    ="Common/monkey.png" />
        <Import file    ="Common/monkey.xnb" />
        <Import file    ="Common/GameAppDelegate.Desktop.cs" />
        <Import file    ="Common/GameAppDelegate.Mobile.cs" />
        <Import file    ="Common/GameLayer.cs" />

        <!-- NuGet packages -->
        <Import file    ="Packages/CocosSharp.Android.1.1.0.0.nupkg" />
        <Import file    ="Packages/CocosSharp.iOS.1.1.0.0.nupkg" />
        <Import file    ="Packages/CocosSharp.MacOS.1.1.0.0.nupkg" />
        <Import file    ="Packages/CocosSharp.PCL.Shared.1.1.0.0.nupkg" />
    </Runtime>

    <Dependencies>
        <Addin id="Core"        version="5.0"/>
        <Addin id="Ide"         version="5.0"/>
        <Addin id="IPhone"      version="5.0"/>
        <Addin id="MonoAndroid" version="5.0"/>
        <Addin id="MonoMac"     version="5.0"/>
    </Dependencies>


    <Extension path="/MonoDevelop/Ide/ProjectTemplatePackageRepositories">
        <PackageRepository path="Packages" />
    </Extension>

    <Extension path="/MonoDevelop/Ide/ProjectTemplates">
        <!---iOS project templates -->
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.iOS.iPhoneProject.SW" 
                        file    ="SingleWindowed.iOS/MonoDevelop.CocosSharp.iOS.iPhoneProject.xpt.xml" />
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.iOS.iPadProject.SW" 
                        file    ="SingleWindowed.iOS/MonoDevelop.CocosSharp.iOS.iPadProject.xpt.xml" />
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.iOS.UniversalProject.SW" 
                        file    ="SingleWindowed.iOS/MonoDevelop.CocosSharp.iOS.UniversalProject.xpt.xml" />
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.iOS.iPhoneProject.Empty" 
                        file    ="Empty.iOS/MonoDevelop.CocosSharp.iOS.EmptyiPhoneProject.xpt.xml" />
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.iOS.iPadProject.Empty" 
                        file    ="Empty.iOS/MonoDevelop.CocosSharp.iOS.EmptyiPadProject.xpt.xml" />
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.iOS.UniversalProject.Empty" 
                        file    ="Empty.iOS/MonoDevelop.CocosSharp.iOS.EmptyUniversalProject.xpt.xml" />
        
        <!---Android project templates -->
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.Android.AndroidProject.SW" 
                        file    ="SingleWindowed.Android/MonoDevelop.CocosSharp.Android.AndroidProject.xpt.xml" />
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.Android.AndroidProject.Empty" 
                        file    ="Empty.Android/MonoDevelop.CocosSharp.Android.EmptyProject.xpt.xml" />
        
        <!-- Mobile project templates -->
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.Mobile.MobileProject.SW" 
                        file    ="SingleWindowed.Mobile/MonoDevelop.CocosSharp.Mobile.MobileProject.xpt.xml" />

        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.Mobile.MobileProject.Empty" 
                        file    ="Empty.Mobile/MonoDevelop.CocosSharp.Mobile.EmptyProject.xpt.xml" />
        
        <!---Mac project templates -->
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.Mac.MacProject.SW" 
                        file    ="SingleWindowed.Mac/MonoDevelop.CocosSharp.Mac.MacProject.xpt.xml" />
        <ProjectTemplate
                        id      ="MonoDevelop.CocosSharp.Mac.MacProject.Empty" 
                        file    ="Empty.Mac/MonoDevelop.CocosSharp.Mac.EmptyProject.xpt.xml" />
    </Extension>

    <Extension path="/MonoDevelop/Ide/FileTemplates">
        <FileTemplate
                        id      ="MonoDevelop.CocosSharp.NewLayer"
                        file    ="Common/MonoDevelop.CocosSharp.NewLayer.xft.xml"/>
    </Extension>

</Addin>